MDScreen:
    MDNavigationLayout:
        MDScreenManager:
            id:cr
            MDScreen:
                name:"Page1"
                FitImage:
                    source:"Font.webp"
                    size_hint:1,1
                MDCard:
                    opacity: 0.9
                    size_hint:0.85,0.85
                    pos_hint:{"center_x":0.5,"center_y":0.5}
                    MDScreen:
                        MDLabel:
                            text:"[u]Identify your self ![/u]"
                            font_style:'H5'
                            theme_text_color:"Custom"
                            text_color:app.theme_cls.primary_color
                            pos_hint:{"center_y":0.75}
                            halign:'center'
                            markup:True
                            bold:True
                        MDTextField:
                            id:Ident
                            hint_text:"Identifiant"
                            helper_text:"Can be also your name"
                            helper_text_mode:"on_focus"
                            size_hint_x:0.75
                            icon_right:"account"
                            pos_hint:{"center_x":0.5,"center_y":0.6}
                            halign:"center"
                        MDTextField:
                            id:Pass
                            hint_text:"PassWord"
                            helper_text:"Min is 8 words"
                            helper_text_mode:"on_focus"
                            size_hint_x:0.75
                            icon_right:"passport"
                            pos_hint:{"center_x":0.5,"center_y":0.45}
                            password:True
                            halign:"center"

                        MDRectangleFlatButton:
                            text:"[b]Valider[/b]"
                            size_hint_x:0.5
                            pos_hint:{"center_x":0.5,"center_y":0.25}
                            on_release:app.do(self)
                        
                        MDRectangleFlatButton:
                            text:"[b]Quitter[/b]"
                            pos_hint:{"center_x":0.13,"center_y":0.95}
                            theme_text_color:"Custom"
                            text_color:"red"
                            on_release: app.Back(self)
            MDScreen:
                name:"Page2"
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title:"Cotise"
                        left_action_items:[["menu", lambda x:Nav_drawer.set_state("toggle")]]
                        right_action_items:[["weather-night-partly-cloudy",lambda x : app.Change(x)]]
                    Widget:
                MDLabel:
                    text:"Salut M.Elis√©e"
                    font_style:"H5"
                    pos_hint:{"center_y":0.65}
                    halign:"center"

                MDRaisedButton:
                    text:"[b]New Cotisation[/b]"
                    pos_hint:{"center_x":0.25,"center_y":0.45}
                    size_hint:0.4,0.2
                    on_release:app.New_Cot(self)
                MDRaisedButton:
                    text:"[b]Cotisation[/b]"
                    pos_hint:{"center_x":0.75,"center_y":0.45}
                    size_hint:0.4,0.2
                    on_release:app.Cotiser(self)
                
                MDRectangleFlatButton:
                    text:"[b]Back[/b]"
                    pos_hint:{"center_x":0.1,"center_y":0.85}
                    on_release:app.Back(self)
                
                MDLabel:
                    text:"Dieu Est Grand"
                    font_style:"Caption"
                    pos_hint:{"center_y":0.1}
                    halign:"center"
                    theme_text_color:"Error"
                    bold:True
            MDScreen:
                name:"Page3"
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title:"List of Cotisation"
                        left_action_items:[["arrow-left",lambda x : app.Back(x)],["menu",lambda x : Nav_drawer.set_state("toggle")]]
                        right_action_items:[["weather-night-partly-cloudy",lambda x : app.Change(x)]]
                    ScrollView:
                        MDList:
                            id:List
            
            MDScreen:
                name:"Page4"
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title:"Option of Cotisation"
                        left_action_items:[["arrow-left",lambda x : app.Back(x)],["menu",lambda x : Nav_drawer.set_state('toggle')]]
                        right_action_items:[["weather-night-partly-cloudy",lambda x : app.Change(x)]]
                    ScrollView:
                        MDList:
                            id:List2
            MDScreen:
                name:"Page5"
                MDBoxLayout:
                    orientation:"vertical"
                    MDTopAppBar:
                        id:TopBar
                        title:"List"
                        left_action_items:[["menu",lambda x : Nav_drawer.set_state('toggle')]]
                        right_action_items:[["weather-night-partly-cloudy",lambda x : app.Change(x)]]
                    Widget:
                MDScreen:
                    id:Data
                    MDRectangleFlatButton:
                        text:"[b]Back[/b]"
                        pos_hint:{"center_x":0.1,"center_y":0.85}
                        on_release:app.Back(self)
                
                    
            MDScreen:
                name:"Page6"
                MDBoxLayout:
                    orientation:"vertical"
                    MDTopAppBar:
                        id:TopBar2
                        title:"Way"
                        left_action_items:[["arrow-left",lambda x : app.Back(x)],["menu",lambda x : Nav_drawer.set_state("toggle")]]

                    MDScreen:
                        FileChooserListView:
                            id:selct
                            dirselect:True
                        MDRectangleFlatButton:
                            text:"[b]Choisir ce chemin[/b]"
                            pos_hint:{"center_x":0.5,"center_y":0.1}
                            on_release:app.this(self)

    MDNavigationDrawer:
        id:Nav_drawer
        MDBoxLayout:
            orientation:"vertical"
            spacing:5
            padding:10
            Image:
                source:"Prof.jpg"
            MDLabel:
                text:"    Elisco"
                font_style:'Subtitle1'
                bold:True
                theme_text_color:"Custom"
                text_color:app.theme_cls.primary_color
                size_hint_y:None
                height:self.texture_size[1]
            MDLabel:
                text:"     eliseeatikpo10@gmail.com"
                font_style:"Caption"
                size_hint_y:None
                bold:True
                height:self.texture_size[1]

            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text:"About as"
                        theme_text_color:"Custom"
                        text_color:app.theme_cls.primary_color
                        on_release: app.Option_List(self)
                        IconLeftWidget:
                            icon:"information"
                    OneLineIconListItem:
                        text:"Help"
                        theme_text_color:"Custom"
                        text_color:app.theme_cls.primary_color
                        on_release: app.Option_List(self)
                        IconLeftWidget:
                            icon:"help"
                    OneLineIconListItem:
                        theme_text_color:"Custom"
                        text_color:(1,0,0,1)
                        text:"Leave"
                        on_release: app.Option_List(self)
                        IconLeftWidget:
                            icon:"close"